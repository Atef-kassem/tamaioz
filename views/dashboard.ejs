        <script>
          function updateDateTime() {
            const now = new Date();
            const options = {
              year: "numeric",
              month: "long",
              day: "numeric",
              hour: "2-digit",
              minute: "2-digit",
              second: "2-digit",
              hour12: false,
              timeZoneName: "short",
            };
            const localeSelect = document.getElementById("localeSelect");
            const selectedLocale = localeSelect ? localeSelect.value : "ar-EG";
            const formattedDateTime = now.toLocaleString(selectedLocale, options);
            document.getElementById("dateTimeDisplay").textContent =
              formattedDateTime;
          }
    
          document
            .getElementById("localeSelect")
            .addEventListener("change", function () {
              localStorage.setItem("selectedLocale", this.value);
              updateDateTime();
            });
    
          // Load saved locale from localStorage or default to 'ar-EG'
          window.addEventListener("DOMContentLoaded", () => {
            const savedLocale = localStorage.getItem("selectedLocale") || "ar-EG";
            const localeSelect = document.getElementById("localeSelect");
            if (localeSelect) {
              localeSelect.value = savedLocale;
            }
            updateDateTime();
            setInterval(updateDateTime, 1000);
          });
    
          document
            .getElementById("reportsLink")
            .addEventListener("click", function (event) {
              event.preventDefault();
              fetch("/reports")
                .then((response) => {
                  if (!response.ok) {
                    throw new Error("Network response was not ok");
                  }
                  return response.text();
                })
                .then((html) => {
                  document.getElementById("mainContent").innerHTML = html;
                })
                .catch((error) => {
                  document.getElementById("mainContent").innerHTML =
                    "<p>حدث خطأ أثناء تحميل شاشة التقارير.</p>";
                  console.error("Error loading reports content:", error);
                });
            });
    
          // Avatar popup toggle
          const navbarAvatar = document.getElementById("navbarAvatar");
          const avatarPopup = document.getElementById("avatarPopup");
    
          navbarAvatar.addEventListener("click", () => {
            avatarPopup.classList.toggle("show");
          });
    
          // Close popup when clicking outside
          window.addEventListener("click", (event) => {
            if (
              !avatarPopup.contains(event.target) &&
              event.target !== navbarAvatar
            ) {
              avatarPopup.classList.remove("show");
            }
          });
        </script>
