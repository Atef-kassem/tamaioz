<div class="dashboard-supervisor" style="max-width: 700px; margin: 30px auto; background: #fff; border-radius: 16px; box-shadow: 0 2px 16px rgba(0,0,0,0.08); padding: 32px; font-family: 'Cairo', Arial, sans-serif;">
  <div class="stats-section" style="margin-bottom: 32px;"></div>
    <h2 style="color: #007bff; margin-bottom: 20px; font-size: 1.5rem;">إحصائيات المشرف</h2>
    <ul class="stats-list" style="list-style: none; padding: 0;">
      <li class="stats-item" style="margin-bottom: 12px; font-size: 1.1rem;">
        <span style="color: #555;">المعايير المدخلة:</span>
        <span class="stats-value" style="font-weight: bold; color: #28a745;"><%= statistics.criteriaEntered %></span>
      </li>
      <li class="stats-item" style="margin-bottom: 12px; font-size: 1.1rem;">
        <span style="color: #555;">المعايير المتبقية:</span>
        <span class="stats-value" style="font-weight: bold; color: #dc3545;"><%= statistics.criteriaRemaining %></span>
      </li>
      <li class="stats-item" style="font-size: 1.1rem;">
        <span style="color: #555;">حالة التقديم:</span>
        <ul class="submission-status-list" style="list-style: none; padding: 0; margin-top: 8px;">
          <li class="submission-status-item" style="display: inline-block; margin-left: 16px;">
            <span style="color: #ffc107;">قيد الانتظار:</span>
            <span class="status pending" style="font-weight: bold; color: #ffc107;"><%= statistics.submissionStatusCounts.pending %></span>
          </li>
          <li class="submission-status-item" style="display: inline-block; margin-left: 16px;">
            <span style="color: #28a745;">مقبولة:</span>
            <span class="status approved" style="font-weight: bold; color: #28a745;"><%= statistics.submissionStatusCounts.approved %></span>
          </li>
          <li class="submission-status-item" style="display: inline-block;">
            <span style="color: #dc3545;">مرفوضة:</span>
            <span class="status rejected" style="font-weight: bold; color: #dc3545;"><%= statistics.submissionStatusCounts.rejected %></span>
          </li>
        </ul>
      </li>
    </ul>
  </div>

  <div class="notifications-section" style="margin-bottom: 32px;">
    <h3 style="color: #007bff; margin-bottom: 14px; font-size: 1.2rem;">الإشعارات الجديدة</h3>
    <ul class="notifications-list" style="list-style: none; padding: 0;">
      <% if (notifications.length === 0) { %>
        <li style="color: #888; font-size: 1rem;">لا توجد إشعارات جديدة.</li>
      <% } else { %>
        <% notifications.forEach(function(notification) { %>
          <li class="notification-item" style="background: #f8f9fa; margin-bottom: 8px; padding: 10px 14px; border-radius: 6px; color: #333; font-size: 1rem;">
            <%= notification.message %>
          </li>
        <% }); %>
      <% } %>
    </ul>
  </div>

  <div class="quicklinks-section">
    <h3 style="color: #007bff; margin-bottom: 14px; font-size: 1.2rem;">روابط سريعة</h3>
    <ul class="quicklinks-list" style="list-style: none; padding: 0; display: flex; flex-wrap: wrap; gap: 10px;">
      <% quickLinks.forEach(function(link) { %>
        <li class="quicklink-item">
          <a href="<%= link.url %>" class="quicklink-button" style="display: inline-block; padding: 8px 18px; background: #f1f3f6; color: #007bff; border-radius: 6px; text-decoration: none; font-weight: 500; transition: background 0.2s;">
            <%= link.name %>
          </a>
        </li>
      <% }); %>
    </ul>
    <button
      onclick="window.location.href='/awards/page'"
      class="sidebar-award-button"
      style="
        margin-top: 18px;
        padding: 10px 18px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 1rem;
        font-weight: 500;
        box-shadow: 0 1px 4px rgba(0,0,0,0.07);
        transition: background 0.2s;
      "
      onmouseover="this.style.backgroundColor='#0056b3'"
      onmouseout="this.style.backgroundColor='#007bff'"
    >
      إدارة الجوائز
    </button>
    <button
      onclick="window.location.href='/elements/page'"
      class="sidebar-element-button"
      style="
        margin-top: 18px;
        padding: 10px 18px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 1rem;
        font-weight: 500;
        box-shadow: 0 1px 4px rgba(0,0,0,0.07);
        transition: background 0.2s;
        margin-right: 10px;
      "
      onmouseover="this.style.backgroundColor='#1e7e34'"
      onmouseout="this.style.backgroundColor='#28a745'"
    >
      إدارة العناصر
    </button>
  </div>
</div>
