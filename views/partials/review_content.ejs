<div class="review-container">
  <h1>مراجعة بيانات الجمعية: <%= association.name %></h1>

  <section class="criteria-list card">
    <h2>المعايير والنقاط</h2>
    <% if (criteria.length === 0) { %>
    <p class="empty">لا توجد معايير مدخلة.</p>
    <% } else { %> <% criteria.forEach(function(item) { %>
    <div class="criteria-item">
      <span class="criteria-name"><%= item.name %></span>
      <span class="criteria-points"><%= item.points %> نقطة</span>
    </div>
    <% }); %> <% } %>
  </section>

  <section class="methodology card">
    <h2>نص المنهجية والتطبيق</h2>
    <p><%= methodologyText %></p>
  </section>

  <section class="attached-files card">
    <h2>الملفات المرفقة</h2>
    <% if (attachedFiles.length === 0) { %>
    <p class="empty">لا توجد ملفات مرفقة.</p>
    <% } else { %>
    <ul>
      <% attachedFiles.forEach(function(file) { %>
      <li>
        <a href="<%= file.url %>" target="_blank"><%= file.filename %></a>
      </li>
      <% }); %>
    </ul>
    <% } %>
  </section>

  <section class="review-comments card">
    <h2>التعليقات السابقة</h2>
    <% if (reviewComments.length === 0) { %>
    <p class="empty">لا توجد تعليقات سابقة.</p>
    <% } else { %> <% reviewComments.forEach(function(comment) { %>
    <div class="review-comment">
      <div class="author"><%= comment.author || "مراجع" %></div>
      <div class="date">
        <%= new Date(comment.date).toLocaleString("ar-EG") %>
      </div>
      <div class="text"><%= comment.comment %></div>
    </div>
    <% }); %> <% } %>
  </section>

  <form id="reviewForm" method="POST" action="">
    <div class="comments-section">
      <label for="comment">إضافة ملاحظات أو استفسارات:</label>
      <textarea
        id="comment"
        name="comment"
        rows="4"
        placeholder="اكتب تعليقك هنا..."
      ></textarea>
    </div>

    <div
      class="comments-section"
      id="rejectionReasonSection"
      style="display: none"
    >
      <label for="rejectionReason">سبب الرفض المؤقت:</label>
      <input
        type="text"
        id="rejectionReason"
        name="rejectionReason"
        placeholder="اكتب سبب الرفض هنا..."
      />
    </div>

    <div class="buttons">
      <button
        type="submit"
        class="approve"
        formaction="/associations/<%= association._id %>/approve"
        formmethod="POST"
        title="اعتماد الجمعية"
      >
        اعتماد
      </button>
      <button
        type="button"
        class="reject"
        id="rejectBtn"
        title="رفض الجمعية مؤقتاً مع ذكر السبب"
      >
        رفض مؤقت
      </button>
    </div>
  </form>
</div>

<style>
  body {
    background: linear-gradient(135deg, #e0e7ff 0%, #f7f8fa 100%);
    font-family: "Cairo", Tahoma, Arial, sans-serif;
    direction: rtl;
  }
  .review-container {
    max-width: 750px;
    margin: 48px auto;
    background: #fff;
    border-radius: 20px;
    box-shadow: 0 6px 32px #0002;
    padding: 40px 32px;
    border: 1.5px solid #e0e7ef;
    transition: box-shadow 0.2s;
  }
  .review-container:hover {
    box-shadow: 0 10px 40px #0003;
  }
  h1 {
    font-size: 2.2rem;
    margin-bottom: 28px;
    color: #1e293b;
    text-align: center;
    letter-spacing: 1px;
    font-weight: bold;
    background: linear-gradient(90deg, #3b82f6 30%, #22c55e 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .card {
    background: #f3f6fa;
    border-radius: 12px;
    padding: 22px 18px;
    margin-bottom: 26px;
    box-shadow: 0 2px 8px #0001;
    border: 1px solid #e5e7eb;
  }
  h2 {
    font-size: 1.25rem;
    margin-bottom: 14px;
    color: #1a2233;
    border-right: 5px solid #3b82f6;
    padding-right: 12px;
    font-weight: 700;
    letter-spacing: 0.5px;
  }
  .criteria-item {
    display: flex;
    justify-content: space-between;
    padding: 9px 0;
    border-bottom: 1px solid #e5e7eb;
    font-size: 1.05rem;
    align-items: center;
  }
  .criteria-item:last-child {
    border-bottom: none;
  }
  .criteria-name {
    font-weight: 700;
    color: #2563eb;
  }
  .criteria-points {
    color: #374151;
    background: #e0e7ef;
    border-radius: 6px;
    padding: 2px 10px;
    font-size: 0.98em;
  }
  .empty {
    color: #888;
    font-style: italic;
    margin: 0;
    text-align: center;
  }
  .attached-files ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .attached-files li {
    margin-bottom: 8px;
  }
  .attached-files a {
    color: #2563eb;
    text-decoration: underline;
    transition: color 0.2s, background 0.2s;
    padding: 2px 6px;
    border-radius: 4px;
  }
  .attached-files a:hover {
    color: #fff;
    background: #2563eb;
  }
  .review-comment {
    background: #e0e7ef;
    border-radius: 9px;
    padding: 12px 14px;
    margin-bottom: 12px;
    border: 1px solid #cbd5e1;
    transition: box-shadow 0.2s;
  }
  .review-comment:hover {
    box-shadow: 0 2px 8px #2563eb22;
  }
  .review-comment .author {
    font-weight: bold;
    color: #2563eb;
    margin-bottom: 2px;
  }
  .review-comment .date {
    font-size: 0.93em;
    color: #6b7280;
    margin-bottom: 4px;
  }
  .review-comment .text {
    color: #222;
  }
  .comments-section {
    margin-bottom: 20px;
  }
  label {
    display: block;
    margin-bottom: 7px;
    color: #1a2233;
    font-weight: 600;
    font-size: 1.05em;
  }
  textarea,
  input[type="text"] {
    width: 100%;
    border: 1.5px solid #cbd5e1;
    border-radius: 8px;
    padding: 12px;
    font-size: 1.05rem;
    background: #f9fafb;
    transition: border 0.2s, box-shadow 0.2s;
    resize: vertical;
  }
  textarea:focus,
  input[type="text"]:focus {
    border-color: #2563eb;
    outline: none;
    box-shadow: 0 0 0 2px #3b82f633;
  }
  .buttons {
    display: flex;
    gap: 16px;
    justify-content: flex-end;
    margin-top: 14px;
  }
  button {
    padding: 12px 34px;
    border: none;
    border-radius: 8px;
    font-size: 1.08rem;
    font-family: inherit;
    cursor: pointer;
    font-weight: bold;
    transition: background 0.2s, color 0.2s, box-shadow 0.2s;
    box-shadow: 0 2px 8px #0001;
    position: relative;
  }
  button.approve {
    background: linear-gradient(90deg, #22c55e 60%, #16a34a 100%);
    color: #fff;
  }
  button.approve:hover {
    background: linear-gradient(90deg, #16a34a 60%, #22c55e 100%);
    box-shadow: 0 4px 16px #22c55e33;
  }
  button.reject {
    background: linear-gradient(90deg, #ef4444 60%, #b91c1c 100%);
    color: #fff;
  }
  button.reject:hover {
    background: linear-gradient(90deg, #b91c1c 60%, #ef4444 100%);
    box-shadow: 0 4px 16px #ef444433;
  }
  button:focus {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }
  button[title]:hover::after {
    content: attr(title);
    position: absolute;
    bottom: 120%;
    right: 50%;
    transform: translateX(50%);
    background: #222;
    color: #fff;
    padding: 6px 14px;
    border-radius: 6px;
    white-space: nowrap;
    font-size: 0.98em;
    z-index: 10;
    opacity: 0.95;
    pointer-events: none;
    box-shadow: 0 2px 8px #0003;
  }
  @media (max-width: 600px) {
    .review-container {
      padding: 14px 4px;
    }
    h1 {
      font-size: 1.15rem;
    }
    .card {
      padding: 8px 4px;
    }
    button {
      padding: 10px 10px;
      font-size: 0.98rem;
    }
  }
</style>

<script>
  const rejectBtn = document.getElementById("rejectBtn");
  const reviewForm = document.getElementById("reviewForm");
  const rejectionReasonSection = document.getElementById(
    "rejectionReasonSection"
  );

  rejectBtn.addEventListener("click", () => {
    if (rejectionReasonSection.style.display === "none") {
      rejectionReasonSection.style.display = "block";
      rejectBtn.textContent = "إرسال الرفض";
      reviewForm.action = "/associations/<%= association._id %>/reject";
      reviewForm.method = "POST";
    } else {
      if (!document.getElementById("rejectionReason").value.trim()) {
        alert("يرجى كتابة سبب الرفض المؤقت.");
        return;
      }
      reviewForm.submit();
    }
  });
</script>
