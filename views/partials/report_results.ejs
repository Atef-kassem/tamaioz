<style>
  .report-results-table {
    width: 100%;
    border-collapse: collapse;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    direction: rtl;
    background: #fff;
    box-shadow: 0 2px 8px #eee;
  }
  .report-results-table th,
  .report-results-table td {
    border: 1px solid #ddd;
    padding: 10px 8px;
    text-align: center;
  }
  .report-results-table th {
    background: #f5f5f5;
    color: #333;
    font-weight: bold;
  }
  .report-results-table tr:nth-child(even) {
    background: #fafafa;
  }
  .report-results-table tr:hover {
    background: #e6f7ff;
  }
</style>

<table class="report-results-table">
  <thead>
    <tr>
      <th title="اسم الجمعية">اسم الجمعية</th>
      <th title="المعيار">المعيار</th>
      <th title="تاريخ التقرير">التاريخ</th>
      <th title="تفاصيل إضافية">تفاصيل إضافية</th>
    </tr>
  </thead>
  <tbody>
    <% if (reports && reports.length > 0) { %> <%
    reports.forEach(function(report) { %>
    <tr>
      <td title="<%= report.associationName %>">
        <%= report.associationName %>
      </td>
      <td title="<%= report.criteriaName %>"><%= report.criteriaName %></td>
      <td title="<%= report.date.toLocaleDateString('ar-EG') %>">
        <%= report.date.toLocaleDateString('ar-EG') %>
      </td>
      <td title="<%= report.details || 'لا توجد تفاصيل' %>">
        <%= report.details || 'لا توجد تفاصيل' %>
      </td>
    </tr>
    <% }); %> <% } else { %>
    <tr>
      <td colspan="4">لا توجد بيانات لعرضها.</td>
    </tr>
    <% } %>
  </tbody>
</table>
